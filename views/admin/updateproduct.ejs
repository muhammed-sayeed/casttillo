<form action="/admin/updateproduct/<%= onUser._id %> " method="post" enctype="multipart/form-data">

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-xl-2"></div>
<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Update Product</h6>
        <div class="form-floating mb-3">
            <input type="String" class="form-control" id="floatingInput"
                placeholder="" name="name" value="<%= onUser.name %> ">
             <label for="floatingInput">product name</label> 
        </div>
        <div class="form-floating mb-3">
            <input type="String" class="form-control" id="floatingInput"
                placeholder="" name="brand" value="<%= onUser.brand %> ">
             <label for="floatingInput">Brand name</label> 
        </div>
        <div class="form-floating mb-3">
            <input type="String" class="form-control" id="floatingInput"
                placeholder="" name="price" value="<%= onUser.price %> ">
             <label for="floatingInput"> Price</label> 
        </div>
        <div class="form-floating mb-3">
            <input type="String" class="form-control" id="floatingInput"
                placeholder="" name="stock" value="<%= onUser.stock %> ">
             <label for="floatingInput">Stock</label> 
        </div>
        <div class="form-outline mb-4">
            <select name="category" id="category">
                <% categories.forEach(element =>{ %>
                    <option value="<%= element._id %>"><%= element.name %> </option>

              <% }) %> 
            </select>
        </div>
