<%- include('partials/navbar.ejs') -%>
<%- include('partials/sidebar.ejs') -%>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-xl-2"></div>
<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4"> Category List</h6>
       <form action="/admin/editcategory" method="get">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Cat name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Description</th>
                    <th><a href="/admin/addcat" class="btn btn" style="background-color: rgb(249, 165, 7); width: 70px; color: white;">Add </a></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0;i<categorylist.length;i++){ %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= categorylist[i].name %> </td>
                        <td><img src="<%= categorylist[i].image %> " width="100px" height="auto" alt=""></td>
                        <td><%= categorylist[i].description %></td>
                        <td> <a href="/admin/delcategory/<%= categorylist[i]._id %>" onclick="return confirm('Are you sure')" class="btn btn-danger">Delete</a></td>
                        <td><a href="/admin/editcategory?id=<%= categorylist[i]._id %>" class="btn btn-success">Edit</a></td>
                       
                
                </tr>
             <% } %>  
            </tbody>
        </table>
    </form>
    </div>
</div>